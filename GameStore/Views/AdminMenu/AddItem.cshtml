
<form id="addItemForm" action="/api/Items" method="POST">
    <div class="form-group">
        <label for="itemName">Название товара:</label>
        <input id="itemName" required class="form-control" name="Name" type="text" />
    </div>
    <div class="form-group">
        <label for="itemPrice">Цена товара:</label>
        <input id="itemPrice" required class="form-control" name="Price" type="text" />
    </div>
    <div class="form-group">
        <label for="itemCategory">Категория:</label>
        <input id="itemCategory" required class="form-control" name="Category" type="text" />
    </div>
    <div class="form-group">
        <label for="itemDescription">Описание:</label>
        <textarea id="itemDescription" required class="form-control" name="Description" ></textarea>
    </div>
    <div class="form-group">
        <label for="itemPicUrl">URL:</label>
        <input id="itemPicUrl" required class="form-control" name="PicUrl" type="text" />
    </div>
    <input class="myBtn" type="submit"/>
</form>